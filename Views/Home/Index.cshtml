@{
    ViewBag.Title = "Home Page";
}

<script>
    function search() {
        var query = document.getElementById("query").value;
        document.getElementById("queryButton").href = "/Movies?query=" + query;
    }
</script>

<div class="jumbotron">
    <h1>Social Media</h1>
    <p class="lead">Search for any movie from the online Internet Movie Database</p>
</div>

<div class="row">
    <div class="col-md-3"></div>
    
    <div class="col-md-6">
        <center><h3>Type the name of movie and press Submit</h3></center>
        <input type="text" class="form-control" id="query" style="display: block; width: 100%; margin: 0 auto;" placeholder="e.g. Interstellar" onchange="search()">
        <br />
        <p><a class="btn btn-default btn-info" id="queryButton" style="display: block; width: 50%; margin: 0 auto;" href="#">Submit &raquo;</a></p>
    </div>
    
    <div class="col-md-3"></div>
</div>